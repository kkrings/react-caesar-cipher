{
	"name": "react-caesar-cipher",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { 
			"VARIANT": "16-bullseye"
		}
	},
	"settings": {
		"editor.renderWhitespace": "all",
		"editor.rulers": [80],
		"[css]": {
			"editor.defaultFormatter": "esbenp.prettier-vscode"
		},
		"[typescript]": {
			"editor.defaultFormatter": "esbenp.prettier-vscode"
		},
		"[typescriptreact]": {
			"editor.defaultFormatter": "esbenp.prettier-vscode"
		}
	},
	"extensions": [
		"dbaeumer.vscode-eslint",
		"esbenp.prettier-vscode"
	],
	"remoteUser": "node"
}
